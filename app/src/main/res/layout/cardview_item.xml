<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <android.support.v7.widget.CardView
            card:cardCornerRadius="10dp"
            card:cardElevation="8dp"
            card:contentPadding="10dp"
            android:layout_height="100dp"
            android:layout_width="match_parent">
    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ImageView android:layout_width="50dp" android:layout_height="50dp"
                   android:src="@drawable/ic_person_black_24dp" android:id="@+id/imageView2"
                   card:layout_constraintTop_toTopOf="parent" card:layout_constraintStart_toStartOf="parent"
                   android:layout_marginStart="5dp"/>
        <TextView
                android:text="프로필"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/tv_profile"
                card:layout_constraintTop_toBottomOf="@+id/imageView2" card:layout_constraintStart_toStartOf="parent"
                card:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="11dp"/>
        <TextView
                android:text="에베베베베베베ㅔ벱베ㅔ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"
                android:id="@+id/tv_title" card:layout_constraintStart_toEndOf="@+id/imageView2"
                android:layout_marginStart="24dp" android:layout_marginTop="20dp"
                card:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:text="에베베베베베베베베베베ㅔ"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_content"
                card:layout_constraintTop_toBottomOf="@+id/tv_title"
                card:layout_constraintStart_toEndOf="@+id/imageView2" android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"/>
    </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>